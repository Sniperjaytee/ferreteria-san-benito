{
  "name": "theme",
  "version": "1.0.0",
  "description": "Django theme app with Tailwind CSS",
  "scripts": {
    "start": "npm run dev",
    "build": "npm run build:clean && npm run build:tailwind",
    "build:clean": "rimraf ../static/css/dist",
    "build:tailwind": "postcss ./src/styles.css -o ../static/css/dist/styles.css --minify",
    "dev": "postcss ./src/styles.css -o ../static/css/dist/styles.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "postcss-cli": "^10.1.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.3"
  }
}
